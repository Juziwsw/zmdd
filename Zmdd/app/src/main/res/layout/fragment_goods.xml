<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_tab_goods"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_navsearch"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/lin_point_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_point_down"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_goodshead"
            android:layout_toLeftOf="@+id/lin_point_down"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:scrollbars="none"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_bgcolor">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_popularity_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/txt_popularity_goods"
                    android:layout_alignBottom="@+id/txt_popularity_goods"
                    android:layout_centerVertical="true"
                    android:background="@color/red"/>
                <TextView
                    android:id="@+id/txt_popularity_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="人气好货"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_popularity_goods"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:text="热门好货排行榜"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_more"/>
                    <ImageView
                        android:id="@+id/ic_section_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_section_more"/>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_goods"
                android:layout_toLeftOf="@+id/lin_point_down"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/white"
                android:scrollbars="none"/>
            <RelativeLayout
                android:id="@+id/rel_global_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/txt_global_goods"
                    android:layout_alignBottom="@+id/txt_global_goods"
                    android:layout_centerVertical="true"
                    android:background="@color/red"/>
                <TextView
                    android:id="@+id/txt_global_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="全球好货"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_global_goods"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:text="实时更新全球优惠"/>
            </RelativeLayout>
            <com.woban.zmdd.wights.HightListview
                android:id="@+id/listView_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.woban.zmdd.wights.HightListview>
        </LinearLayout>
    </ScrollView>


</LinearLayout>