<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bgcolor">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:src="@drawable/ic_muy"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="none"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <View
            style="@style/row_style_margin"
            android:layout_toLeftOf="@+id/www"
            android:layout_centerVertical="true">
        </View>
        <TextView
            android:id="@+id/www"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_global_goods_everyday_change"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:layout_centerInParent="true"/>
        <View
            style="@style/row_style_margin"
            android:layout_toRightOf="@+id/www"
            android:layout_centerVertical="true">
        </View>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scrollbars="none"/>
    <View
        style="@style/row_style_margin"
        android:layout_marginTop="2dp"
        android:layout_centerVertical="true">
    </View>

    <com.woban.zmdd.wights.HightListview
        android:id="@+id/listView_second_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.woban.zmdd.wights.HightListview>

</LinearLayout>